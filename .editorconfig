root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[{*.yml, *.yaml}]
indent_style = space
indent_size = 4

[composer.json]
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = tab
indent_size = 4

[docker-compose.*]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
